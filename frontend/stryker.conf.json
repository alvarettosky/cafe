{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress", "json"],
  "testRunner": "vitest",
  "coverageAnalysis": "perTest",
  "vitest": {
    "configFile": "vitest.config.mts"
  },
  "mutate": [
    "components/**/*.{ts,tsx}",
    "lib/**/*.ts",
    "types/**/*.ts",
    "!**/__tests__/**",
    "!**/*.test.{ts,tsx}",
    "!**/*.spec.{ts,tsx}",
    "!**/*.d.ts",
    "!**/*.config.*"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "timeoutMS": 30000,
  "concurrency": 4,
  "ignorePatterns": [
    "node_modules",
    ".next",
    "coverage",
    "dist"
  ]
}
